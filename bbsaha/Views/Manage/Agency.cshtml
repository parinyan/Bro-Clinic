@model bbsaha.Models.Account.ListUser

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Administration</title>

    <style>
        body {
            line-height: unset;
        }
    </style>
</head>
<body>
    <div id="_acc" style="margin: 0px 50px;">


        @*<button type="submit">save</button>*@
        <button type="button" data-bs-toggle="modal" data-bs-target="#_account_new" class="btn btn-primary">New</button>
        @*<button type="button" data-bs-toggle="modal" data-bs-target="#_account_detail" v-on:click="toggleaccountdetail" class="btn btn-outline-info" :disabled="isDisabled" style="font-weight: 900;">detail</button>*@
        @*<button type="button" class="btn btn-outline-danger" v-on:click="toggleaccountdelete" :disabled="isDisableddel" style="font-weight: 900;">delete</button>*@


        <h3 class="p-3">Customer</h3>
        <div style="overflow:auto;height:400px;width: 1200px">
            <table class="table table-striped table-bordered" id="acc">
                <thead>
                    <tr style="position:sticky;top:0;background-color: #fff">

                        <th>No</th>
                        <th>AgenName</th>
                        <th>Status</th>
                                              
                        <th>Config</th>
                        @*<th>Man-Power</th>
                            <th>Time Attendance</th>
                            <th>Administration</th>*@
                    </tr>
                </thead>
                <tbody>

                    <tr v-for="(value,key) in getdataagen">

                        <td>{{key + 1}}</td>
                        <td>{{value.agenName}}</td>
                        <td>
                            <template v-if="value.status == 1">
                                <button class="btn-success bt1" v-on:click="toggleagenstatus(value.id,0)">Online</button>

                            </template>
                            <template v-else>
                                <button class="btn-danger bt2" v-on:click="toggleagenstatus(value.id,1)">Offline</button>

                            </template>

                        </td>
                       
                        <td><button class="btn-warning" data-bs-toggle="modal" data-bs-target="#_account_detail" v-on:click="toggledataed(value.id)">Edit</button></td>

                    </tr>

                </tbody>
            </table>

        </div>
        <div class="modal fade" id="_account_new" tabindex="-1" aria-labelledby="_account_newLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content" id="_account_input_save">
                    @*<div class="modal-header">

                </div>*@
                    <div class="modal-body">
                        <h5 class="modal-title" id="exampleModalLabel">Agency Recommend</h5>

                        <hr />

                        <div class="row _account_input mb-2">
                            <div class="col col-3">
                                AgencyName:
                            </div>
                            <div class="col col-9">
                                <input type="text" class="form-control" v-model="agenname" style="font-weight: 900;">
                            </div>
                        </div>




                        <div class="row _account_input mb-4">
                            <div class="col col-3">

                            </div>
                            <div class="col col-9">
                                <select class="form-control" v-model="agenstatus">
                                    <option value="1">Open</option>
                                    <option value="0">Close</option>
                                </select>
                                @*<input type="checkbox" name="name" value="" /> Super User*@
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary" v-on:click="toggleagensave">save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


            <div class="modal fade" id="_account_detail" tabindex="-1" aria-labelledby="_account_newLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content" id="_account_input_save">
                        <div class="modal-header">

                        </div>
                        <div class="modal-body">
                            <h5 class="modal-title" id="exampleModalLabel">Agency Recommend</h5>

                            <hr />

                            <div class="row _account_input mb-2">
                                <div class="col col-3">
                                    AgencyName:
                                </div>
                                <div class="col col-9">
                                    <input type="text" class="form-control" v-model="agennameed" style="font-weight: 900;">
                                </div>
                            </div>




                            <div class="row _account_input mb-4">
                                <div class="col col-3">

                                </div>
                                <div class="col col-9">
                                    <select class="form-control" v-model="agenstatused">
                                        <option value="1">Open</option>
                                        <option value="0">Close</option>
                                    </select>
                                    @*<input type="checkbox" name="name" value="" /> Super User*@
                                </div>


                            </div>
                        </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" v-on:click="toggleagenedsave">save</button>
                            </div>
                        </div>
                    
                </div>
            </div>
       
    </div>
</body>
</html>




@*<link href="~/asset/style/_Customer.css" rel="stylesheet" asp-append-version="true" />*@
<script src="~/asset/Manage/_agency.js" asp-append-version="true"></script>